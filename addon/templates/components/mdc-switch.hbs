<div id="{{id}}" class="mdc-switch {{class}} {{if disabled 'mdc-switch--disabled'}}">
  <input
    checked="{{if checked 'checked' null}}"
    class="mdc-switch__native-control"
    disabled="{{if disabled 'disabled' null}}"
    form="{{if form form null}}"
    id="{{id}}-switch"
    name="{{if name name null}}"
    type="checkbox"
    value="{{if value value null}}"
  >
  <div class="mdc-switch__background">
    <div class="mdc-switch__knob"></div>
  </div>
</div>
{{#if label}}<label id="{{id}}-label" class="mdc-switch-label" for="{{id}}-switch">{{label}}</label>{{/if}}